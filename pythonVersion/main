import matrixLib as mtx


def main():
    while 1:
        select = int(
            input("Choose one option:\n0 - Exit\n1 - Add matrixes\n2 - Subtract matrixes\n3 - Multiply matrixes\n"))
        if select != 0:
            row = int(input("How many rows?\n"))
            col = int(input("How many columns?\n"))
            if select == 0:
                return 0
            elif select == 1:
                matrix_1 = mtx.matrixCreate(row, col)
                matrix_2 = mtx.matrixCreate(row, col)
                print(mtx.matrixAdd(matrix_1, matrix_2))
            elif select == 2:
                matrix_1 = mtx.matrixCreate(row, col)
                matrix_2 = mtx.matrixCreate(row, col)
                print(mtx.matrixSubt(matrix_1, matrix_2))
            elif select == 3:
                matrix_1 = mtx.matrixCreate(row, col)
                matrix_2 = mtx.matrixCreate(row, col)
                print(mtx.matrixMul(matrix_1, matrix_2))
        else:
            return 0


main()
